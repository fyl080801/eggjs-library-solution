{
  "name": "eggjs-library-solution",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "fyl080801",
  "license": "MIT",
  "egg": {
    "declarations": false
  },
  "dependencies": {
    "egg": "^3.12.0",
    "egg-scripts": "^2.16.0"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "egg-bin": "^5.11.3",
    "egg-mock": "^5.8.0",
    "eslint": "8.13.0",
    "eslint-config-egg": "^12.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.3",
    "lerna": "^6.4.0",
    "lint-staged": "^13.1.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "volta": {
    "node": "16.14.2"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "clean": "lerna run clean --parallel && rimraf dist",
    "build": "lerna run build",
    "start": "egg-scripts start --daemon --title=egg-server-eggjs-test1 --env=prod",
    "stop": "egg-scripts stop --title=egg-server-eggjs-test1",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug --env=prod",
    "lint": "eslint .",
    "prepack": "yarn run build",
    "postinstall": "husky install",
    "publish": "lerna publish",
    "postpublish": "yarn run clean",
    "commit": "git add . && git status && git-cz",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fyl080801/eggjs-library-solution.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.(vue|tsx|js|ts)": [
      "prettier --write"
    ]
  }
}
