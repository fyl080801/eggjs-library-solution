{
  "name": "eggjs-library-solution",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "author": "fyl080801",
  "license": "MIT",
  "egg": {
    "declarations": false
  },
  "dependencies": {
    "egg": "^2.33.1",
    "egg-scripts": "^2.15.2"
  },
  "devDependencies": {
    "autod": "^3.1.2",
    "autod-egg": "^1.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "egg-bin": "^4.17.0",
    "egg-ci": "^1.19.0",
    "egg-mock": "^4.2.0",
    "eslint": "7.12.1",
    "eslint-config-egg": "^9.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "clean": "lerna run clean --parallel && rimraf dist",
    "build": "lerna run build",
    "start": "egg-scripts start --daemon --title=egg-server-eggjs-test1",
    "stop": "egg-scripts stop --title=egg-server-eggjs-test1",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug --env=prod",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "lint": "eslint .",
    "ci": "npm run lint && npm run cov",
    "autod": "autod",
    "prepack": "yarn run build",
    "postinstall": "husky install",
    "postpublish": "yarn run clean",
    "commit": "git add . && git status && git-cz",
    "lint-staged": "lint-staged"
  },
  "ci": {
    "version": "12"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/fyl080801/eggjs-library-solution.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.(vue|tsx|js|ts)": [
      "prettier --write"
    ]
  }
}
